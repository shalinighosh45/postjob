<div class="container-xxl py-5">
  <div class="container">
    <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Related Blogs</h1>
    <div class="row g-4">


      <% if (relatedPost && relatedPost.length> 0) { %>
        <% for (let related of relatedPost) { %>
          <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
            <a class="cat-item rounded p-4" href="/post/<%= related?._id %>"
              style="width: 280px; height:250px">
              <img src="/<%= related?.image %>" style="width: 200px; height: 140px; ">
              <br>
              <h6 class="mb-3">
                <%= related?.title %>
              </h6>
              <h6 class="mb-3">
                <%= related?.subTitle %>
              </h6>
              <p class="mb-0">
                <%= related?.publishedDate?.toLocaleString() %>
              </p>
              <span><i class="fa fa-message-o"></i>

                <%= related?.commentIds?.length %>
              </span>
            </a>
          </div>
          <br>
          <br>
          <br>
          <br>
          <% } %>
            <% } %>

    </div>
  </div>
</div>